<head>
  <title>Bootstrap Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<style>
.big-box,
.mini-box {
    background-color: #10BCFF;
    color: white;
    text-align: center;
   
    font-size: 1.5em;
}

</style>

<body>
<div class="container">
    <div class="row">
        <div class="col-xs-4 hidden-sm hidden-xs">
            <div class="big-box">Event Header</div>
        </div>
        <div class="col-xs-8">
            <div class="row">
		<div class="col-md-3 hidden-sm hidden-xs"><div class="mini-box">Label 1</div></div>
                <div class="col-md-3 hidden-sm hidden-xs"><div class="mini-box">Label 2</div></div>
                <div class="col-md-3 hidden-sm hidden-xs"><div class="mini-box">Label 3</div></div>
                <div class="col-md-3 hidden-sm hidden-xs"><div class="mini-box">Label 4</div></div>
            </div>
        </div>
    </div>

<div class="row">
        <div class="col-xs-4">
            <div class="big-box">Event 1</div>
        </div>
        <div class="col-xs-8">
            <div class="row">
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 1</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 1</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 2</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 2</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 3</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 3</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 4</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 4</div>
            </div>
        </div>
    </div>

<div class="row">
        <div class="col-xs-4">
            <div class="big-box">Event 1a</div>
        </div>
        <div class="col-xs-8">
            <div class="row">
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 1</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 1a</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 2</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 2a</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 3</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 3a</div>
                <div class="mini-box hidden-md col-sm-4 col-xs-6 hidden-lg">Label 4</div><div class="col-md-3 col-sm-4 col-xs-6 mini-box">Val 4a</div>
            </div>
        </div>
    </div>


    
</div>

</body>

